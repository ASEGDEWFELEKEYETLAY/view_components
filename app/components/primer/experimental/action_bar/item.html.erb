<%= render Primer::ConditionalWrapper.new(condition: !divider?, tag: :div, classes: "ActionBar-item", "data-targets": "action-bar.items") do %>
  <% if icon_button? %>
    <%= render Primer::Beta::IconButton.new(**@system_arguments) %>
  <% else %>
    <%= render Primer::BaseComponent.new(**@system_arguments) %>
  <% end %>
<% end %>
